{
    "manifest_version": 3,
    "name": "Highlight and Image Saver",
    "description": "This extension saves highlighted text and images.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    }
}
